{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "outDir": "lib",
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
}